<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="fr.imag.model2roo.ecore.ui.contribution1"
            nameFilter="*.ecore"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="fr.imag.model2roo.ecore.ui.menu1"
               label="Model2Roo"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="fr.imag.model2roo.ecore.ui.popup.actions.Ecore2RooAction"
               enablesFor="1"
               icon="icons/roo.ico"
               id="fr.imag.model2roo.ecore.ui.Ecore2RooAction"
               label="Generate Spring Roo commands"
               menubarPath="fr.imag.model2roo.ecore.ui.menu1/group1">
         </action>
         <action
               class="fr.imag.model2roo.ecore.ui.popup.actions.AnnotateEcoreAction"
               enablesFor="1"
               icon="icons/roo.ico"
               id="fr.imag.model2roo.ecore.ui.AnnotateEcoreAction"
               label="Annotate model with Spring Roo details"
               menubarPath="fr.imag.model2roo.ecore.ui.menu1/group1">
         </action>
      </objectContribution>
   </extension>

</plugin>
